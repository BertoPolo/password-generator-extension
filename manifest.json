{
  "manifest_version": 2,
  "name": "Password Generator",
  "version": "1.3",
  "description": "Generate secure passwords easily.",
  "permissions": ["contextMenus", "activeTab", "storage"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "48": "icon.png"
  }
}
