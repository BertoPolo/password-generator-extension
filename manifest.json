{
  "manifest_version": 2,
  "name": "Password Generator",
  "version": "1.3",
  "description": "Generate secure passwords easily and save them to a file.",
  "permissions": ["storage", "downloads", "activeTab"],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "48": "icon.png"
  }
}
